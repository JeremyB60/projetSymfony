{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Mon panier</h1>

    <table class="table text-center">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for element in dataPanier %}
                <tr>
                    <td>{{ element.produit.nom | capitalize }}</td>
                    <td class="text-center">{{ element.produit.prix }} €</td>
                    <td>{{ element.quantite }}</td>
                    <td>{{ element.quantite * element.produit.prix }} €</td>
                    <td>
                        <a href="{{ path("add_cart", {id: element.produit.id}) }}" class="btn btn-success">Ajouter</a>
                        <a href="{{ path("remove_cart", {id: element.produit.id}) }}" class="btn btn-warning">Enlever</a>
                        <a href="{{ path("delete_cart", {id: element.produit.id}) }}" class="btn btn-danger">Supprimer</a>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Votre panier est vide.</td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end">Total</td>
                <td class="text-center">{{ total }} €</td>
                <td><a href="{{ path("delete_all_cart") }}" class="btn btn-danger">Vider le panier</a>


            </tr>
        </tfoot>
    </table>
{% endblock %}
