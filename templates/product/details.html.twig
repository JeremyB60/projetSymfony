{% extends 'base.html.twig' %}

{% block title %}
    {{ product.nom | capitalize }}
{% endblock %}

{% block body %}

    {# Affiche le détail du produit #}
    <div class="container">
        <h1 class="h3 mt-2 mb-3 font-weight-normal text-center">Fiche produit : {{ product.nom | capitalize }}</h1>
        <div class="row text-center mt-5">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <img src="{{ product.imageUrl }}" class="card-img-top" alt="{{ product.nom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.nom | capitalize }}</h5>
                        <p class="card-text">{{ product.type | capitalize }}</p>
                        <p class="card-text">{{ product.prix | number_format(2) }} €</p>
                        <p class="card-text">{{ product.description }}</p>
                        <a href="{{ path("add_cart", {'id': product.id}) }}" class="btn btn-success">Ajouter au panier</a><br>
                        <a href="{{ path('app_home') }}" class="btn btn-danger mt-2">Retour Accueil</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
